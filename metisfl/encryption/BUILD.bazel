load("@pybind11_bazel//:build_defs.bzl", "pybind_extension")
load("@rules_python//python:defs.bzl", "py_library")

package(default_visibility = ["//visibility:public"])

pybind_extension(
    # The name of this rule is associated with how the module will be imported
    # in python scripts. The rule will generate the lib fhe.so, which is
    # also a data dependency for the py_library() rule below; therefore it needs
    # to remain UNCHANGED!
    name = "fhe",
    srcs = ["pybind/ckks_pybind.cc"],
    deps = [
      "//metisfl/encryption/palisade:palisade_wrapper",
    ],
    linkopts = select({
      "//:linux_x86_64": ["-lgomp"],
      "//conditions:default": [],
    }),
    copts = [
            "-Wall",
            "-Werror",
            "-O3",
            "-DPALISADE_VERSION=1.11.7",
            "-Wno-unused-private-field",
            "-Wno-shift-op-parentheses",
            "-Wno-unused-command-line-argument",
            "-DMATHBACKEND=2",
            "-Xpreprocessor",
            "-fopenmp",
            "-lomp",
            "-fvisibility=default"
    ],
    linkstatic=True
)

cc_library(
    name = "encryption_cc",
    hdrs = ["encryption_scheme.h"],
)

py_library(
    name = "encryption_lib",
    data = [":fhe.so"],
)

